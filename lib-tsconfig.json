{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "downlevelIteration": true
  },
  "include": ["src/modules"],
  "exclude": ["**/_tests/*"]
}
